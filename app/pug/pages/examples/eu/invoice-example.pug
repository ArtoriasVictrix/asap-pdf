			tbody
				tr
					td Keyboard
					td 1
					td 1,23 €
					td 22%
					td.ta-r 1,23 €
				tr
					td Mouse
					td 2
					td 2,34 €
					td 22%
					td.ta-r 4,56 €
				tr
					td Beer
					td 3
					td 20,00 €
					td 22%
					td.ta-r 78,00 €

		table.table.w-100p.cells-px-12.cells-py-8.mt-16
			tbody
				tr
					td.pl-0 Please pay in one payment, until Friday, thanks.
					td.ta-r Total taxable
					td.ta-r.pr-0 123,45 €
				tr
					td
					td.ta-r VAT (22%)
					td.ta-r.pr-0 12,34 €

		h2.h1.ta-r.mt-16 123,45 €
